<p id="notice"></p>
<div class="container px-5 px-sm-8">
  <div class="row">

    <div class="col-md-3">

      <h2>User info</h2>
      <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <%= link_to '', edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
      </div>

      <h2 class="mt-3">New Book</h2>

      <%= form_with model: @book, local:true do |f| %>

        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_field :body %>
        <div class="books-create-btn">
        <%= f.submit 'Create Book' %>
        </div>
      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <tbody class="books-tbody">
          <tr>
            <td>
              <%= link_to user_path(current_user.id), target: "_blank" do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %></br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id), target: "_blank" do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td><%= @book.body %></td>
            <td><%= link_to "edit", edit_book_path(@book), class: 'btn btn-sm btn-success' %></td>
            <td data-confirm="本当に削除しますか？"><%= link_to "Destroy", book_path(@book), class: 'btn btn-sm btn-danger', method: :delete %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
