<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2 class="error-title"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul class="error-message">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<p id="notice"></p>
<div class="container px-5 px-sm-8">
  <div class="row">

    <%= render 'users/sideBar', users: @users %>

    <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg" %>
              <% end %>
            </td>

            <td>
              <%= link_to book_path(book) do %>
                <%=book.title %>
              <% end %>
            </td>

            <td><%= book.body %></td>
          </tr>
        </tbody>

        <% end %>
        <%= paginate @books %>

      </table>
    </div>
  </div>
</div>
