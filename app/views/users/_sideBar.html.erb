<div class="col-md-3">
  <h2>User info</h2>
  <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
    </tbody>
  </table>

  <div class="row">
    <%= link_to '', edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
  </div>

  <h2 class="mt-3 new_book_title">New book</h2>

  <%= form_with model: @book, local:true do |f| %>

    <h4 class="book_title">Title</h4>
    <%= f.text_area :title, size: "20x1" %>
    <h4 class="book_body">Opinion</h4>
    <%= f.text_area :body, size: "20x3" %>
    <div class="form-group">
      <%= f.submit 'Create Book', class: 'btn btn-sm btn-success opinion_field' %>
    </div>
  <% end %>
</div>